---
import HeaderLogo from './HeaderLogo.jsx';
import Hamburger from '../../components/UI/Hamburger.astro';
import ThemeIcon from '../../components/ThemeIcon.astro';
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../../consts';
---

<header
    class="m-0 px-[4em] py-0 shadow-primary/5 shadow-default dark:shadow-secondary/5 bg-light-50 dark:bg-dark-600"
>
    <nav class="flex items-center justify-between">
        <a href="/">
            <span class="sr-only">Return to Home page</span>
            {SITE_TITLE}
            <!-- <HeaderLogo
                className="fill-dark hover:fill-dark-300 hover:dark:fill-light-50 dark:fill-light-300 h-full transition-all duration-300"
                size="40px"
                alt="Demian Domozhirov logo"
            /> -->
        </a>
        <div class="flex flex-row items-center relative group gap-1">
            <HeaderLink href="/">Home</HeaderLink>
            <HeaderLink href="/blog">Blog</HeaderLink>
            <HeaderLink href="/about">About</HeaderLink>
            <HeaderLink href="/tags">Tags</HeaderLink>
            <HeaderLink href="/projects">Projects</HeaderLink>
        </div>
        <div class="social-links gap-2 hidden md:flex">
            <a href="https://github.com/darkdomian" target="_blank">
                <span class="sr-only">Go to Demian's GitHub profile</span>
                <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
                    ><path
